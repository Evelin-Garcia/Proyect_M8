<p id="notice"><%= notice %></p>
<div class="container">
    <div class="row">
        <div class="col-12">
<h1>Propiedades </h1>

<div class="table-responsive-lg">
<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th>Operacion</th>
      <th>Imagen</th>
      <th>Descripción</th>
      <th>Ubicación</th>
      <th>Precio</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.operation %></td>
        <td><%= property.image %></td>
        <td><%= property.description %></td>
        <td><%= property.ubication %></td>
        <td><%= property.price %></td>
        <td><%= link_to 'Mostrar', property, class: 'btn btn-outline-success' %></td>
        <td><%= link_to 'Editar', edit_property_path(property), class: 'btn btn-outline-warning' %></td>
        <td><%= link_to 'Eliminar', property, method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'Agregar Nueva Propiedad', new_property_path %>
<br><br>
<%= link_to 'Volver al Inicio', welcome_path %>
<br>
</div>
</div>
</div>
