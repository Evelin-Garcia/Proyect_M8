<p id="notice"><%= notice %></p>

<h1>Propiedades</h1>

<table>
  <thead>
    <tr>
      <th>Operacion</th>
      <th>Imagen</th>
      <th>Descripción</th>
      <th>Ubicación</th>
      <th>Precio</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.operation %></td>
        <td><%= property.image %></td>
        <td><%= property.description %></td>
        <td><%= property.ubication %></td>
        <td><%= property.price %></td>
        <td><%= link_to 'Show', property %></td>
        <td><%= link_to 'Edit', edit_property_path(property) %></td>
        <td><%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Agregar Nueva Propiedad', new_property_path %>
